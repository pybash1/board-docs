{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Board Documentation",
  "colors": {
    "primary": "#ff9d00",
    "light": "#ff7800",
    "dark": "#ff8000"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "global": {
      "anchors": [
        {
          "anchor": "Blog",
          "icon": "newspaper",
          "href": "https://journal.pybash.xyz"
        }
      ]
    },
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Getting started",
            "pages": [
              "index",
              "quickstart"
            ]
          },
          {
            "group": "Self Hosting",
            "icon": "server",
            "pages": [
              "selfhost/server",
              "selfhost/mac",
              "selfhost/windows",
              "selfhost/android",
              "selfhost/linux"
            ]
          },
          {
            "group": "Writing content",
            "pages": [
              "essentials/markdown",
              "essentials/code",
              "essentials/images",
              "essentials/reusable-snippets"
            ]
          },
          {
            "group": "AI tools",
            "pages": [
              "ai-tools/cursor",
              "ai-tools/claude-code",
              "ai-tools/windsurf"
            ]
          }
        ]
      },
      {
        "tab": "API reference",
        "openapi": "openapi.json"
      }
    ]
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/light.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:hi@pybash.xyz"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://dashboard.mintlify.com"
    }
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity",
     "mcp",
     "cursor",
     "vscode"
   ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/py_bash1",
      "github": "https://github.com/pybash1",
      "website": "https://pybash.xyz",
      "instagram": "https://instagram.com/ananjan_"
    }
  },
  "styling": {
    "latex": true
  },
  "background": {
    "decoration": "grid"
  },
  "appearance": {
    "default": "system"
  },
  "integrations": {
    "telemetry": {
      "enabled": false
    }
  }
}
